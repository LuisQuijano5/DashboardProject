{
  "Comment": "Workflow B: Pipeline de Predicción (Predicción -> Carga Dynamo en Paralelo)",
  "StartAt": "EjecutarPrediccion",
  "States": {
    "EjecutarPrediccion": {
      "Type": "Task",
      "Resource": "arn:aws:states:::glue:startJobRun.sync",
      "Parameters": {
        "JobName": "script_predictions"
      },
      "Next": "CargaDynamoParalela",
      "Catch": [
        {
          "ErrorEquals": ["States.ALL"],
          "Next": "FalloWorkflow"
        }
      ]
    },
    "CargaDynamoParalela": {
      "Type": "Parallel",
      "End": true,
      "Catch": [
        {
          "ErrorEquals": ["States.ALL"],
          "Next": "FalloWorkflow"
        }
      ],
      "Branches": [
        {
          "StartAt": "CargarSugerencias",
          "States": {
            "CargarSugerencias": {
              "Type": "Task",
              "Resource": "arn:aws:states:::lambda:invoke",
              "Parameters": {
                "FunctionName": "load_results_data",
                "Payload": {
                  "tipo": "sugerencias"
                }
              },
              "End": true
            }
          }
        },
        {
          "StartAt": "CargarMetricas",
          "States": {
            "CargarMetricas": {
              "Type": "Task",
              "Resource": "arn:aws:states:::lambda:invoke",
              "Parameters": {
                "FunctionName": "load_results_data",
                "Payload": {
                  "tipo": "metricas"
                }
              },
              "End": true
            }
          }
        },
        {
          "StartAt": "CargarEvolucion",
          "States": {
            "CargarEvolucion": {
              "Type": "Task",
              "Resource": "arn:aws:states:::lambda:invoke",
              "Parameters": {
                "FunctionName": "load_results_data",
                "Payload": {
                  "tipo": "evolucion"
                }
              },
              "End": true
            }
          }
        },
        {
          "StartAt": "CargarAsistencia",
          "States": {
            "CargarAsistencia": {
              "Type": "Task",
              "Resource": "arn:aws:states:::lambda:invoke",
              "Parameters": {
                "FunctionName": "load_results_data",
                "Payload": {
                  "tipo": "asistencia"
                }
              },
              "End": true
            }
          }
        }
      ]
    },
    "FalloWorkflow": {
      "Type": "Fail",
      "Cause": "Hubo un error en la generación de predicciones o carga de datos.",
      "Error": "PredictionOrLoadFailed"
    }
  }
}